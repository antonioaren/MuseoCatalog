<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@drawable/custom_button_white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <ImageView android:id="@+id/img_row"
               android:src="@drawable/image_not_found"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/pad_row"
                  android:layout_gravity="center"
                  android:orientation="vertical">



        <TextView android:id="@+id/lbl_title"
                  android:text="@string/pro_detail"
                  android:textSize="@dimen/lbl_title"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>


        <TextView android:id="@+id/lbl_subtitle"
                  android:text="@string/cat_detail"
                  android:textSize="@dimen/lbl_subtitle"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>

